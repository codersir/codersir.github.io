@import "nib"
@import "_variables"
@import "_util/mixin"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

* 
  box-sizing border-box
  text-rendering optimizeLegibility
  font-smoothing antialiased
  
a 
    color #444
    text-decoration none
  
html, body
  height 100%
  color #444
  

body
  display flex
  flex-direction row
  background: color-background
  font: 400 15px/1.5 'Helvetica Neue', Helvetica, Arial
  -webkit-text-size-adjust: 100%

.sidebar
  position fixed
  top 0
  left 0
  height 100%
  width 340px
  order -1
  background color-sidebar
.main
  margin 0 0 0 340px
  background color-background

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right


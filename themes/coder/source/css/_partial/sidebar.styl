.sidebar
  &__profile
    margin 2.5em 0 0
    &-link
      text-align center
    &-img
      border-radius 100%
      width 125px 
      height 125px
    &-name
      font-size 2em
      margin 0.625em 0
      font-weight bold
      text-align center
    &-bio
      margin 0
      text-align center
      padding 0 1em
      a 
        font-weight bold
    &-nav
      text-align center
      padding 1.25em
      li 
        list-style none
        display inline-block
        padding 0 0.625em
        border-right 1px solid #ddd
        &:last-child
            border-right none
        a 
            text-decoration none
            color #444
            font-size 0.75em
            font-weight 900
            
    &-social
      text-align center
      a
          display inline-block
          text-decoration none
          color #999
    